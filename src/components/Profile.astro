---
import { PLOGGER, PLOGGER_NAME } from '../consts';
import SocialIcon from './SocialIcon';

const { type = 'small' } = Astro.props;
---

<div class={`profile-section ${type}`}>
  <div class="profile-image" {...type === 'small' ? { onclick: "location.href='/about'" } : {}}>
    <!-- todo:click処理修正 -->
    <div class="image-placeholder"></div>
  </div>
  <div class="profile-info">
    <h2>{PLOGGER}({PLOGGER_NAME})</h2>
    <p class="profile-bio">
      プログラマー歴2年の初心者プログラマーです。<br />
      フロントエンドエンジニアをしています。たまにバックエンドもしています。<br />
      SNSは、あまりやっていないです。
    </p>
    <div class="social-links">
      <SocialIcon type="github" />
      <SocialIcon type="twitter" />
    </div>
  </div>
</div>

<style lang="scss">
  .profile-section {
    display: flex;
    gap: 2rem;
    background-color: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);

    .profile-image {
      flex-shrink: 0;

      .image-placeholder {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background: linear-gradient(45deg, var(--base-color), var(--sub-color-1));
        position: relative;
        overflow: hidden;

        &::after {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23FFFFFF"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/></svg>')
            center/60% no-repeat;
          opacity: 0.8;
        }
      }
    }

    .profile-info {
      flex: 1;

      h2 {
        font-size: 1.8rem;
        margin: 0 0 1rem;
      }

      .profile-bio {
        margin-bottom: 1.5rem;
        line-height: 1.6;
      }
      
      .social-links {
        display: flex;
        gap: 0.5rem;
      }
    }

    &.small {
      .profile-image {
        .image-placeholder {
          cursor: pointer;
          width: 100px;
          height: 100px;
        }
      }

      .profile-info {
        h2 {
          font-size: 1.5rem;
        }
        .profile-bio {
          display: none;
        }
      }
    }
  }
</style>
