import Layout from "../layouts/BaseLayout.astro";
---

<Layout title="プロフィール - Cute Blog">
  <div class="container">
    <div class="page-header">
      <h1>プロフィール</h1>
    </div>

    <div class="about-container">
      <div class="profile-section">
        <div class="profile-image">
          <div class="image-placeholder"></div>
        </div>
        <div class="profile-info">
          <h2>Cute Blog 管理人</h2>
          <p class="profile-bio">
            フロントエンド開発者として活動しています。React、TypeScript、AstroなどのWeb技術が好きで、日々の学びや発見をブログで共有しています。
          </p>
          <div class="social-links">
            <a
              href="https://github.com"
              target="_blank"
              rel="noopener noreferrer"
              class="social-icon"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <!-- todo:ここ修正 -->
              </svg>
            </a>
            <a
              href="#"
              target="_blank"
              rel="noopener noreferrer"
              class="social-icon"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
